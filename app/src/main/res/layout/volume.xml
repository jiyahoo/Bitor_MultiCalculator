<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:backgroundTint="#000000"
        android:text="rectangular prism"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_s2"
        android:layout_width="78dp"
        android:layout_height="69dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#000000"
        android:text="CUBE"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btn_c3"
        app:layout_constraintStart_toStartOf="@+id/btn_c3"
        app:layout_constraintTop_toBottomOf="@+id/btn_c3" />

    <Button
        android:id="@+id/btn_c3"
        android:layout_width="94dp"
        android:layout_height="49dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#000000"
        android:text="Cone"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btn_c1"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/btn_c1"
        app:layout_constraintTop_toBottomOf="@+id/btn_c1" />


</androidx.constraintlayout.widget.ConstraintLayout>